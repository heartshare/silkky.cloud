  // Alert
  - alertType = 0
  - alertUrl = 'https://silkky.cloud/privacy#Ackee'
  - alertMessage = 'Privacy Policy (Additional policies / exceptions) has been updated, please read the changes.'
  include ../templates/dynamic/alert.pug

  // Instances
  .row.row-cols-1.row-cols-md-3.g-4

    // Searx
    - instanceType = 0
    - instanceTitle = 'Searx'
    - instanceDesc = 'Searx is a privacy-respecting metasearch engine that aggregates results from other search engines (duckduckgo, google etc). Results are proxied so your ip address is never exposed.'
    - instanceUrl = 'https://searx.silkky.cloud/'
    - instanceButton = 'Search!'
    include ../templates/dynamic/instance.pug

    // Invidious
    - instanceType = 0
    - instanceTitle = 'Invidious'
    - instanceDesc = 'Invidious is an alternative front-end to YouTube with no ads, no tracking and no google account.'
    - instanceUrl = 'https://invidious.silkky.cloud/'
    - instanceButton = 'Watch!'
    include ../templates/dynamic/instance.pug

    // Send
    - instanceType = 3
    - instanceTitle = 'Send'
    - instanceDesc = 'Simple, private file sharing. Send lets you share files with end-to-end encryption and a link that automatically expires. So you can keep what you share private and make sure your stuff doesnâ€™t stay online forever.'
    - instanceUrl = 'https://send.silkky.cloud/'
    - instanceButton = 'Send!'
    include ../templates/dynamic/instance.pug

    // Vikunja
    - instanceType = 0
    - instanceTitle = 'Vikunja'
    - instanceDesc = 'The to-do app to organize your life. Vikunja is an open-source, self-hosted to-do list application for all platforms.'
    - instanceUrl = 'https://tasks.silkky.cloud/'
    - instanceButton = 'Organize!'
    include ../templates/dynamic/instance.pug

    // Bitwarden
    - instanceType = 0
    - instanceTitle = 'Bitwarden'
    - instanceDesc = 'Bitwarden offers the easiest and safest way for teams and individuals to store and share sensitive data from any device. Your private information is protected with end-to-end encryption before it ever leaves your device.'
    - instanceUrl = 'https://vault.silkky.cloud/'
    - instanceButton = 'Vault!'
    include ../templates/dynamic/instance.pug

    // Libreddit
    - instanceType = 0
    - instanceTitle = 'Libreddit'
    - instanceDesc = 'Libreddit is a private front-end like Invidious but for Reddit. Browse the coldest takes of r/unpopularopinion without being tracked.'
    - instanceUrl = 'https://libreddit.silkky.cloud/'
    - instanceButton = 'Browse!'
    include ../templates/dynamic/instance.pug

    // Whoogle
    - instanceType = 3
    - instanceTitle = 'Whoogle'
    - instanceDesc = 'Get Google search results, but without any ads, javascript, AMP links, cookies, or IP address tracking. Great alternative to Searx if you like the "Google" look.'
    - instanceUrl = 'https://whoogle.silkky.cloud/'
    - instanceButton = 'Search!'
    include ../templates/dynamic/instance.pug

    // Etherpad
    - instanceType = 0
    - instanceTitle = 'Etherpad'
    - instanceDesc = 'Etherpad is a real-time collaborative rich text editor like Google Docs without any tracking.'
    - instanceUrl = 'https://pad.silkky.cloud/'
    - instanceButton = 'Edit!'
    include ../templates/dynamic/instance.pug

    // HedgeDoc
    - instanceType = 0
    - instanceTitle = 'HedgeDoc'
    - instanceDesc = 'The best platform to write and share markdown. HedgeDoc is an open-source collaborative markdown editor. With HedgeDoc you can easily collaborate on notes, graphs and even presentations in real-time.'
    - instanceUrl = 'https://hedgedoc.silkky.cloud/'
    - instanceButton = 'Markdown!'
    include ../templates/dynamic/instance.pug

    // PrivateBin
    - instanceType = 0
    - instanceTitle = 'PrivateBin'
    - instanceDesc = 'PrivateBin is a minimalist, open source online pastebin where the server has zero knowledge of pasted data. Data is encrypted in the browser using 256bit AES.'
    - instanceUrl = 'https://privatebin.silkky.cloud/'
    - instanceButton = 'Paste!'
    include ../templates/dynamic/instance.pug

extends ../templates/base/structure.pug

block meta
  - var metaTitle = 'Contribute'
  - var metaDesc = 'Protecting your information and anonymity against global surveillance.'
  - var ogMetaTitle = 'Silkky.Cloud - Contribute'
  - var ogMetaDesc = 'Protecting your information and anonymity against global surveillance.'
  - var twitterMetaTitle = 'Silkky.Cloud - Contribute'
  - var twitterMetaDesc = 'Protecting your information and anonymity against global surveillance.'
  include ../templates/base/meta.pug
block contents
  // Jumbotron
  .p-4.mb-4.text-white.bg-dark.rounded-3
    .container-fluid.ps-4.py-5
      // Title
      h1.display-4.fw-bold Contribute &#128640;
      // Content
      p.col-md-8.fs-4 Silkky.Cloud is a community project, to be as open and transparent as possible. 
      p You can contribute in any way you like whether that's adding a new page to the site, suggesting a new service or a donation to help with server costs.

      .pt-3
        // Develop
        a.btn.btn-lg.btn-light.shadow.me-2.mb-2(href='#Develop', type='button') Develop 
          // Develop icon
          svg.bi.bi-code-slash(xmlns='http://www.w3.org/2000/svg', width='20', height='20', fill='currentColor', viewbox='0 0 16 16')
            path(d='M10.478 1.647a.5.5 0 1 0-.956-.294l-4 13a.5.5 0 0 0 .956.294l4-13zM4.854 4.146a.5.5 0 0 1 0 .708L1.707 8l3.147 3.146a.5.5 0 0 1-.708.708l-3.5-3.5a.5.5 0 0 1 0-.708l3.5-3.5a.5.5 0 0 1 .708 0zm6.292 0a.5.5 0 0 0 0 .708L14.293 8l-3.147 3.146a.5.5 0 0 0 .708.708l3.5-3.5a.5.5 0 0 0 0-.708l-3.5-3.5a.5.5 0 0 0-.708 0z')

        // Donate
        a.btn.btn-lg.btn-success.shadow.me-2.mb-2(href='#Donate', type='button') Donate 
          // Donate icon
          svg.bi.bi-cash(xmlns='http://www.w3.org/2000/svg', width='20', height='20', fill='currentColor', viewbox='0 0 16 16')
            path(d='M8 10a2 2 0 1 0 0-4 2 2 0 0 0 0 4z')
            path(d='M0 4a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V4zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V6a2 2 0 0 1-2-2H3z')

  // Primary
  .row.row-cols-1.row-cols-md-1.g-4.text-white
    // Develop
    .col
      .p-4.card.bg-dark
        // Title
        h1.fs-2.fw-bold Privacy Policy
        // Content
        p <b>Your data is only used to provide our services.</b> No data is ever shared with a third-party.